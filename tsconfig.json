{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules"
    ]
}